{
    "name": "pdfmasking Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                // Ruff設定
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll.ruff": "explicit",
                        "source.organizeImports.ruff": "explicit"
                    }
                },
                // Ruffを優先するため、既存のlinterを無効化
                "python.linting.enabled": false,
                "ruff.lint.enable": true,
                "ruff.format.enable": true
            }
        }
    },
    "postCreateCommand": "pip install --no-cache-dir -e '.[dev]'",
    "remoteUser": "vscode",
    "workspaceFolder": "/workspaces/pdfmasking",
    "mounts": [
        "source=${localWorkspaceFolder}/output,target=/workspaces/pdfmasking/output,type=bind"
    ]
}